{
	"name": "uestla/twigrid",
	"type": "library",
	"description": "Experimental DataGrid for Nette Framework",
	"keywords": ["nette", "addon", "datagrid"],
	"homepage": "https://github.com/uestla/TwiGrid",
	"license": "MIT",
	"authors": [
		{
			"name": "Petr Kessler",
			"homepage": "https://kesspess.cz",
			"role": "Developer"
		}
	],
	"require" : {
		"php": ">= 7.1.0",
		"nette/http": "^3.0",
		"nette/forms": "^3.0",
		"nette/utils": "^3.0 || ^4.0",
		"latte/latte": "^2.5 || ^3.0",
		"nette/application": "^3.0"
	},
	"require-dev": {
		"nette/database": "^3.0",

		"php-parallel-lint/php-parallel-lint": "^1.3",
		"php-parallel-lint/php-console-highlighter": "^1.0",
		"phpstan/phpstan": "^0.12 || ^1.6 || ^2.0",
		"phpstan/extension-installer": "^1.1 || ^2.0",
		"phpstan/phpstan-nette": "^0.12 || ^1.0 || ^2.0",
		"nette/tester": "^2.3"
	},
	"autoload": {
		"psr-0": {
			"TwiGrid": "src/"
		}
	},
	"scripts": {
		"ci": [
			"@phplint",
			"@phpstan",
			"@test"
		],
		"phplint": "parallel-lint --colors src/ tests/",
		"phpstan": "phpstan analyse",
		"test": "tester -C --colors 1 tests/"
	},
	"config": {
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	}
}
