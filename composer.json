{
	"name": "uestla/twigrid",
	"type": "library",
	"description": "Experimental DataGrid for Nette Framework",
	"keywords": ["nette", "addon", "datagrid"],
	"homepage": "http://github.com/uestla/twigrid",
	"license": "MIT",
	"authors": [
		{
			"name": "Petr Kessler",
			"homepage": "https://kesspess.cz",
			"role": "Developer"
		}
	],
	"require" : {
		"php": ">= 7.1.0",
		"nette/http": "^2.4",
		"nette/forms": "^2.4",
		"nette/utils": "^2.4",
		"latte/latte": "^2.4",
		"nette/application": "^2.4"
	},
	"require-dev": {
		"nette/tester": "^1.7",
		"phpstan/phpstan": "^0.6",
		"phpstan/phpstan-nette": "^0.6"
	},
	"autoload": {
		"psr-0": {
			"TwiGrid": "src/"
		}
	},
	"scripts": {
		"test": "tester tests/",
		"phpstan": "phpstan analyze -l 4 -c phpstan.neon src/ tests/"
	}
}
